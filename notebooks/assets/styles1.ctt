/* styles.css */
body {
    font-family: Arial, sans-serif;
    background: linear-gradient(to right, rgba(193, 248, 84, 0.4), rgba(51, 89, 241, 0.4));
    background-blend-mode: soft-light;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

